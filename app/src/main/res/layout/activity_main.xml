<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.callittips.snishimura.buttontouchsampleapplication.MainActivity">

    <Button
        android:id="@+id/button_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="127dp"
        android:text="Touch me" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_touch"
        android:text="Reset" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_x_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X：" />

        <TextView
            android:id="@+id/tv_x_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_x_label" />

        <TextView
            android:id="@+id/tv_y_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_x_label"
            android:text="Y：" />

        <TextView
            android:id="@+id/tv_y_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_x_value"
            android:layout_toEndOf="@+id/tv_y_label" />

        <TextView
            android:id="@+id/tv_event_label_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_y_label"
            android:text="TouchEvent：" />

        <TextView
            android:id="@+id/tv_event_value_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_y_value"
            android:layout_toRightOf="@id/tv_event_label_touch" />

        <TextView
            android:id="@+id/tv_event_label_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_label_touch"
            android:text="ClickEvent：" />

        <TextView
            android:id="@+id/tv_event_value_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_value_touch"
            android:layout_toRightOf="@id/tv_event_label_click" />

        <TextView
            android:id="@+id/tv_event_label_longclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_label_click"
            android:text="LongClickEvent：" />

        <TextView
            android:id="@+id/tv_event_value_longclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_value_click"
            android:layout_toRightOf="@id/tv_event_label_longclick" />

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:text="New Button" />

</RelativeLayout>
